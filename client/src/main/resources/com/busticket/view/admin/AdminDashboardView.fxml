<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.busticket.controller.admin.AdminDashboardController" spacing="16" stylesheets="@../theme.css">
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Admin Dashboard" styleClass="page-title" />
    </HBox>
    <HBox spacing="16">
        <VBox styleClass="card" spacing="12" prefWidth="220">
            <Label text="Manage Users" styleClass="page-subtitle" />
            <Button text="Open" onAction="#onManageUsers" styleClass="primary-button" />
        </VBox>
        <VBox styleClass="card" spacing="12" prefWidth="220">
            <Label text="Manage Buses" styleClass="page-subtitle" />
            <Button text="Open" onAction="#onManageBuses" styleClass="primary-button" />
        </VBox>
        <VBox styleClass="card" spacing="12" prefWidth="220">
            <Label text="Manage Routes" styleClass="page-subtitle" />
            <Button text="Open" onAction="#onManageRoutes" styleClass="primary-button" />
        </VBox>
        <VBox styleClass="card" spacing="12" prefWidth="220">
            <Label text="Manage Trips" styleClass="page-subtitle" />
            <Button text="Open" onAction="#onManageTrips" styleClass="primary-button" />
        </VBox>
        <VBox styleClass="card" spacing="12" prefWidth="220">
            <Label text="Reports" styleClass="page-subtitle" />
            <Button text="Open" onAction="#onReports" styleClass="primary-button" />
        </VBox>
    </HBox>
</VBox>

