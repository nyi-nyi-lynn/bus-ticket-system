<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.busticket.controller.admin.ReportsController" spacing="16" stylesheets="@../theme.css">
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Reports" styleClass="page-title" />
    </HBox>
    <VBox styleClass="card" spacing="12">
        <TableView fx:id="reportsTable" prefHeight="420">
            <columns>
                <TableColumn fx:id="colReportId" text="Report" />
                <TableColumn fx:id="colPeriod" text="Period" />
                <TableColumn fx:id="colRevenue" text="Revenue" />
                <TableColumn fx:id="colBookings" text="Bookings" />
            </columns>
        </TableView>
        <HBox spacing="10">
            <Button fx:id="refreshButton" text="Refresh" onAction="#onRefresh" styleClass="primary-button" />
        </HBox>
    </VBox>
</VBox>

