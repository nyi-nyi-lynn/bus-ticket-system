<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.busticket.controller.admin.ManageRoutesController"
      spacing="16"
      maxWidth="1.7976931348623157E308"
      stylesheets="@../theme.css">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16" />
    </padding>

    <HBox spacing="12" alignment="CENTER_LEFT">
        <Label text="Manage Routes" styleClass="page-title" />
        <Region HBox.hgrow="ALWAYS" />
        <Button text="+ Add Route" styleClass="primary-button" onAction="#onAddRoute" />
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="globalSearchField" promptText="Search all..." HBox.hgrow="ALWAYS" />
        <ComboBox fx:id="statusFilter" prefWidth="140" />
        <Button text="Reset" styleClass="ghost-button" onAction="#onResetFilters" />
    </HBox>

    <TableView fx:id="routesTable" VBox.vgrow="ALWAYS" maxWidth="1.7976931348623157E308">
        <columns>
            <TableColumn fx:id="noColumn" text="No." />
            <TableColumn fx:id="originColumn" text="Origin" />
            <TableColumn fx:id="destinationColumn" text="Destination" />
            <TableColumn fx:id="distanceColumn" text="Distance (km)" />
            <TableColumn fx:id="durationColumn" text="Estimated Duration" />
            <TableColumn fx:id="statusColumn" text="Status" />
            <TableColumn fx:id="actionsColumn" text="Actions" sortable="false" />
        </columns>
    </TableView>
</VBox>

