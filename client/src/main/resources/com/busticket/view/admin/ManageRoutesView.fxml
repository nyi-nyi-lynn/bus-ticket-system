<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.busticket.controller.admin.ManageRoutesController" spacing="16">
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Manage Routes" styleClass="page-title" />
    </HBox>
    <VBox styleClass="card" spacing="12">
        <TableView fx:id="routesTable" prefHeight="420">
            <columns>
                <TableColumn fx:id="colRouteId" text="ID" />
                <TableColumn fx:id="colOrigin" text="Origin" />
                <TableColumn fx:id="colDestination" text="Destination" />
                <TableColumn fx:id="colDistance" text="Distance" />
                <TableColumn fx:id="colStatus" text="Status" />
            </columns>
        </TableView>
        <HBox spacing="10">
            <Button fx:id="addButton" text="Add" onAction="#onAdd" styleClass="primary-button" />
            <Button fx:id="updateButton" text="Update" onAction="#onUpdate" styleClass="ghost-button" />
            <Button fx:id="blockButton" text="Block" onAction="#onBlock" styleClass="ghost-button" />
        </HBox>
    </VBox>
</VBox>
