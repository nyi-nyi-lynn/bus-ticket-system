<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.busticket.controller.admin.ManageUsersController"
      spacing="16"
      stylesheets="@../theme.css">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16" />
    </padding>

    <HBox spacing="12" alignment="CENTER_LEFT">
        <Label text="Manage Users" styleClass="page-title" />
        <Region HBox.hgrow="ALWAYS" />
        <Button text="+ Add User" styleClass="primary-button" onAction="#onAddUser" />
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="globalSearchField" promptText="Search all..." HBox.hgrow="ALWAYS" />
        <ComboBox fx:id="roleFilter" prefWidth="140" />
        <ComboBox fx:id="statusFilter" prefWidth="140" />
        <Button text="Reset" styleClass="ghost-button" onAction="#onResetFilters" />
    </HBox>

    <TableView fx:id="usersTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="nameColumn" text="Name" />
            <TableColumn fx:id="emailColumn" text="Email" />
            <TableColumn fx:id="phoneColumn" text="Phone" />
            <TableColumn fx:id="roleColumn" text="Role" />
            <TableColumn fx:id="statusColumn" text="Status" />
            <TableColumn fx:id="createdAtColumn" text="Created At" />
            <TableColumn fx:id="actionsColumn" text="Actions" sortable="false" />
        </columns>
    </TableView>
</VBox>
