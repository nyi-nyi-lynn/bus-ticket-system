<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox maxWidth="1.7976931348623157E308" prefHeight="542.0" prefWidth="756.0" spacing="16" stylesheets="@../theme.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.busticket.controller.admin.ManageUsersController">
    <padding>
        <Insets bottom="16" left="16" right="16" top="16" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="12">
        <Label styleClass="page-title" text="Manage Users" />
        <Region HBox.hgrow="ALWAYS" />
        <Button onAction="#onAddUser" styleClass="primary-button" text="+ Add User" />
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <TextField fx:id="globalSearchField" promptText="Search all..." HBox.hgrow="ALWAYS" />
        <ComboBox fx:id="roleFilter" prefWidth="140" />
        <ComboBox fx:id="statusFilter" prefWidth="140" />
        <Button onAction="#onResetFilters" styleClass="ghost-button" text="Reset" />
    </HBox>

    <TableView fx:id="usersTable" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="noColumn" text="No." />
            <TableColumn fx:id="nameColumn" text="Name" />
            <TableColumn fx:id="emailColumn" text="Email" />
            <TableColumn fx:id="phoneColumn" text="Phone" />
            <TableColumn fx:id="roleColumn" text="Role" />
            <TableColumn fx:id="statusColumn" text="Status" />
            <TableColumn fx:id="createdAtColumn" text="Created At" />
            <TableColumn fx:id="actionsColumn" sortable="false" text="Actions" />
        </columns>
    </TableView>
</VBox>
