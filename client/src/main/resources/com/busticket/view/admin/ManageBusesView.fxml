<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox maxWidth="1.7976931348623157E308" spacing="16" stylesheets="@../theme.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.busticket.controller.admin.ManageBusesController">
    <padding>
        <Insets bottom="16" left="16" right="16" top="16" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="12">
        <Label styleClass="page-title" text="Manage Buses" />
        <Region HBox.hgrow="ALWAYS" />
        <Button onAction="#onAddBus" styleClass="primary-button" text="+ Add Bus" />
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <TextField fx:id="globalSearchField" promptText="Search all..." styleClass="combo-field" HBox.hgrow="ALWAYS" />
        <ComboBox fx:id="busTypeFilter" prefWidth="140" styleClass="combo-field" />
        <ComboBox fx:id="statusFilter" prefWidth="140" styleClass="combo-field" />
        <Button onAction="#onResetFilters" styleClass="ghost-button" text="Reset" />
    </HBox>

    <TableView fx:id="busesTable" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="busIdColumn" text="No." />
            <TableColumn fx:id="busNumberColumn" text="Bus Number" />
            <TableColumn fx:id="busNameColumn" text="Bus Name" />
            <TableColumn fx:id="totalSeatsColumn" text="Total Seats" />
            <TableColumn fx:id="busTypeColumn" text="Bus Type" />
            <TableColumn fx:id="statusColumn" text="Status" />
            <TableColumn fx:id="actionsColumn" sortable="false" text="Actions" />
        </columns>
    </TableView>
</VBox>
