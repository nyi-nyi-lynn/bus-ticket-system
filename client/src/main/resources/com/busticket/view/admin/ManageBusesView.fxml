<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.busticket.controller.admin.ManageBusesController"
      spacing="16"
      maxWidth="1.7976931348623157E308"
      stylesheets="@../theme.css">
    <padding>
        <Insets top="16" right="16" bottom="16" left="16" />
    </padding>

    <HBox spacing="12" alignment="CENTER_LEFT">
        <Label text="Manage Buses" styleClass="page-title" />
        <Region HBox.hgrow="ALWAYS" />
        <Button text="+ Add Bus" styleClass="primary-button" onAction="#onAddBus" />
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="globalSearchField" promptText="Search all..." HBox.hgrow="ALWAYS" />
        <ComboBox fx:id="busTypeFilter" prefWidth="140" />
        <ComboBox fx:id="statusFilter" prefWidth="140" />
        <Button text="Reset" styleClass="ghost-button" onAction="#onResetFilters" />
    </HBox>

    <TableView fx:id="busesTable" VBox.vgrow="ALWAYS" maxWidth="1.7976931348623157E308">
        <columns>
            <TableColumn fx:id="busIdColumn" text="No." />
            <TableColumn fx:id="busNumberColumn" text="Bus Number" />
            <TableColumn fx:id="busNameColumn" text="Bus Name" />
            <TableColumn fx:id="totalSeatsColumn" text="Total Seats" />
            <TableColumn fx:id="busTypeColumn" text="Bus Type" />
            <TableColumn fx:id="statusColumn" text="Status" />
            <TableColumn fx:id="actionsColumn" text="Actions" sortable="false" />
        </columns>
    </TableView>
</VBox>

