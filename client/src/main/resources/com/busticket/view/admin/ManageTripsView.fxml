<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox maxWidth="1.7976931348623157E308" spacing="16" stylesheets="@../theme.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.busticket.controller.admin.ManageTripsController">
    <padding>
        <Insets bottom="16" left="16" right="16" top="16" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="12">
        <Label styleClass="page-title" text="Manage Trips" />
        <Region HBox.hgrow="ALWAYS" />
        <Button onAction="#onAddTrip" styleClass="primary-button" text="+ Add Trip" />
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="10">
        <TextField fx:id="globalSearchField" promptText="Search all..." styleClass="field" HBox.hgrow="ALWAYS" />
        <ComboBox fx:id="statusFilter" prefWidth="140" styleClass="combo-field" />
        <Button onAction="#onResetFilters" styleClass="ghost-button" text="Reset" />
    </HBox>

    <TableView fx:id="tripsTable" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="noColumn" text="No." />
            <TableColumn fx:id="routeColumn" text="Route" />
            <TableColumn fx:id="busColumn" text="Bus" />
            <TableColumn fx:id="travelDateColumn" text="Travel Date" />
            <TableColumn fx:id="departureColumn" text="Departure" />
            <TableColumn fx:id="arrivalColumn" text="Arrival" />
            <TableColumn fx:id="priceColumn" text="Price" />
            <TableColumn fx:id="statusColumn" text="Status" />
            <TableColumn fx:id="actionsColumn" sortable="false" text="Actions" />
        </columns>
    </TableView>
</VBox>
