<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.busticket.controller.PassengerPaymentController"
      spacing="14.0">

    <VBox styleClass="card" spacing="10.0">
        <Label text="Payment" styleClass="card-title"/>
        <Label text="Select Unpaid Booking" styleClass="section-title"/>
        <ComboBox fx:id="unpaidBookingCombo" onAction="#handleSelectUnpaidBooking" promptText="Pending bookings" styleClass="input"/>
        <Label text="Order Summary" styleClass="section-title"/>
        <Label fx:id="bookingSummaryLabel" text="No order found" styleClass="metric-sub"/>
        <HBox spacing="8.0">
            <Label text="Total:" styleClass="section-title"/>
            <Label fx:id="totalAmountLabel" text="\$0" styleClass="metric"/>
        </HBox>
        <ComboBox fx:id="paymentMethodField" promptText="Payment Method" styleClass="input"/>
        <HBox spacing="10.0">
            <Button text="Confirm Payment" onAction="#handleConfirmPayment" styleClass="primary-button"/>
            <Button text="Back to Order" onAction="#handleBackToOrder" styleClass="secondary-button"/>
        </HBox>
        <Label fx:id="paymentStatusLabel" text="Status" styleClass="pill"/>
    </VBox>

    <VBox styleClass="card" spacing="10.0">
        <Label text="Payment History" styleClass="card-title"/>
        <TableView fx:id="paymentHistoryTable" prefHeight="240.0">
            <columns>
                <TableColumn fx:id="paymentIdColumn" text="Payment #"/>
                <TableColumn fx:id="paymentMethodColumn" text="Method"/>
                <TableColumn fx:id="paymentAmountColumn" text="Amount"/>
                <TableColumn fx:id="paymentStatusColumn" text="Status"/>
            </columns>
        </TableView>
    </VBox>
</VBox>
