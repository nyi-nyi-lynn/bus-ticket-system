<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="760.0" prefWidth="1160.0" styleClass="app-shell role-customer" stylesheets="@../app.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.busticket.controller.RegisterController">

    <left>
        <VBox prefWidth="280.0" styleClass="sidebar">
            <Label styleClass="brand" text="Bus Ticket" />
            <Label text="Create Account" />
            <Region VBox.vgrow="ALWAYS" />
            <Label text="Secure Registration" />
        </VBox>
    </left>

    <center>
        <VBox alignment="CENTER" maxWidth="420.0" prefWidth="420.0" spacing="14.0" styleClass="content">
            <Label styleClass="page-title" text="Join the platform" />
            <Label styleClass="section-title" text="Create your customer account" />
            <VBox prefWidth="400.0" spacing="10.0" styleClass="card">
                <Label styleClass="card-title" text="Register" />
                <Label text="Full Name" styleClass="field-label" />
                <TextField fx:id="nameField" promptText="Full Name" styleClass="input" />
                <Label text="Email" styleClass="field-label" />
                <TextField fx:id="emailField" promptText="Email" styleClass="input" />
                <Label text="Phone" styleClass="field-label" />
                <TextField fx:id="phoneField" promptText="Phone" styleClass="input" />
                <Label text="Password" styleClass="field-label" />
                <PasswordField fx:id="passwordField" promptText="Password" styleClass="input" />
                <Button maxWidth="1.7976931348623157E308" onAction="#handleRegister" styleClass="primary-button" text="Create Account" />
                <Button onAction="#goToLogin" prefHeight="35.0" prefWidth="404.0" styleClass="secondary-button" text="Back to Login" />
            </VBox>
        </VBox>
    </center>
</BorderPane>
