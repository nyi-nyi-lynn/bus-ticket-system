<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="860.0" prefWidth="1280.0" styleClass="app-shell role-customer" stylesheets="@app.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.busticket.controller.PassengerDashBoardController">

    <left>
        <VBox prefWidth="230.0" styleClass="sidebar">
            <Label styleClass="brand" text="Bus Ticket" />
            <Label text="Passenger" />
            <Region VBox.vgrow="ALWAYS" />
            <Button fx:id="routesNavButton" onAction="#openRoutesPage" prefHeight="38.0" prefWidth="150.0" text="Routes">
            <styleClass>
               <String fx:value="nav-button" />
               <String fx:value="nav-active" />
            </styleClass></Button>
            <Button fx:id="orderNavButton" onAction="#openOrderPage" prefHeight="38.0" prefWidth="150.0" styleClass="nav-button" text="Order" />
            <Button fx:id="paymentNavButton" onAction="#openPaymentPage" prefHeight="38.0" prefWidth="150.0" styleClass="nav-button" text="Payment" />
            <Button fx:id="ticketNavButton" onAction="#openTicketPage" prefHeight="38.0" prefWidth="150.0" styleClass="nav-button" text="Ticket" />
            <Region VBox.vgrow="ALWAYS" />
            <Button onAction="#handleLogout" styleClass="nav-button" text="Logout" />
        </VBox>
    </left>

    <top>
        <HBox spacing="16.0" styleClass="topbar">
            <Label styleClass="page-title" text="Passenger Booking" />
            <Region HBox.hgrow="ALWAYS" />
            <Label styleClass="pill" text="Flow: Search -&gt; Order -&gt; Payment -&gt; Ticket" />
        </HBox>
    </top>

    <center>
        <StackPane fx:id="passengerContentPane" styleClass="content" />
    </center>
</BorderPane>
