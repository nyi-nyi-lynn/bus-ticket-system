<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.busticket.controller.StaffDashboardController"
            stylesheets="@app.css" styleClass="app-shell role-staff" prefHeight="520.0" prefWidth="900.0">

    <left>
        <VBox styleClass="sidebar" prefWidth="220.0">
            <Label text="Bus Ticket" styleClass="brand"/>
            <Label text="Staff Console"/>
            <Region VBox.vgrow="ALWAYS"/>
            <Button text="Validate" styleClass="nav-button nav-active"/>
            <Button text="History" styleClass="nav-button"/>
            <Region VBox.vgrow="ALWAYS"/>
            <Button text="Sign out" onAction="#handleLogout" styleClass="nav-button"/>
        </VBox>
    </left>

    <top>
        <HBox styleClass="topbar" spacing="16.0">
            <Label text="Ticket Validation" styleClass="page-title"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Role: Staff" styleClass="pill"/>
            <Button text="Logout" onAction="#handleLogout" styleClass="secondary-button"/>
        </HBox>
    </top>

    <center>
        <VBox styleClass="content" spacing="16.0">
            <HBox spacing="16.0">
                <VBox styleClass="card" spacing="10.0" prefWidth="420.0">
                    <Label text="QR Camera Preview" styleClass="card-title"/>
                    <VBox styleClass="qr-box" spacing="6.0" prefHeight="220.0">
                        <Label text="Camera feed preview"/>
                    </VBox>
                </VBox>

                <VBox styleClass="card" spacing="10.0" prefWidth="420.0">
                    <Label text="Manual Validation" styleClass="card-title"/>
                    <TextField fx:id="ticketCodeField" promptText="Ticket Code" styleClass="input"/>
                    <Button text="Validate Ticket" onAction="#handleValidateTicket" styleClass="primary-button"/>
                    <Label fx:id="resultLabel" text="Ready" styleClass="status-success"/>
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>
