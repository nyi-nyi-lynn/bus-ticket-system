<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.busticket.controller.RegisterController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml">

        <Label text="Register" />

        <TextField fx:id="nameField" promptText="Full Name" />
        <TextField fx:id="emailField" promptText="Email" />
        <TextField fx:id="phoneField" promptText="Phone" />
        <PasswordField fx:id="passwordField" promptText="Password" />

        <Button text="Register" onAction="#handleRegister"/>

    </VBox>

</AnchorPane>
