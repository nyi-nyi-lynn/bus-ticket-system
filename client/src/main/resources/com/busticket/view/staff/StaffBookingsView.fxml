<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.busticket.controller.staff.StaffBookingsController" spacing="16" stylesheets="@../theme.css">
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Manage Bookings" styleClass="page-title" />
    </HBox>
    <VBox styleClass="card" spacing="12">
        <TableView fx:id="bookingsTable" prefHeight="420">
            <columns>
                <TableColumn fx:id="colBookingId" text="Booking" />
                <TableColumn fx:id="colPassenger" text="Passenger" />
                <TableColumn fx:id="colSeats" text="Seats" />
                <TableColumn fx:id="colStatus" text="Status" />
            </columns>
        </TableView>
        <HBox spacing="10">
            <Button fx:id="updateButton" text="Update" onAction="#onUpdate" styleClass="primary-button" />
            <Button fx:id="cancelButton" text="Cancel" onAction="#onCancel" styleClass="ghost-button" />
        </HBox>
    </VBox>
</VBox>

