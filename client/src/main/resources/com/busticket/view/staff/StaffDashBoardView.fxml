<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.busticket.controller.staff.StaffDashboardController" spacing="16">
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Staff Dashboard" styleClass="page-title" />
    </HBox>
    <HBox spacing="16">
        <VBox styleClass="card" spacing="12" prefWidth="220">
            <Label text="View Trips" styleClass="page-subtitle" />
            <Button text="Open" onAction="#onViewTrips" styleClass="primary-button" />
        </VBox>
        <VBox styleClass="card" spacing="12" prefWidth="220">
            <Label text="Manage Bookings" styleClass="page-subtitle" />
            <Button text="Open" onAction="#onManageBookings" styleClass="primary-button" />
        </VBox>
        <VBox styleClass="card" spacing="12" prefWidth="220">
            <Label text="Validate Ticket" styleClass="page-subtitle" />
            <Button text="Open" onAction="#onValidateTicket" styleClass="primary-button" />
        </VBox>
    </HBox>
</VBox>
