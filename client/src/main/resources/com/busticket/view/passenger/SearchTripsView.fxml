<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.busticket.controller.passenger.SearchTripsController" spacing="16">
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Search Trips" styleClass="page-title" />
    </HBox>
    <VBox styleClass="card" spacing="12">
        <HBox spacing="12">
            <TextField fx:id="originField" promptText="Origin city" styleClass="field" />
            <TextField fx:id="destinationField" promptText="Destination city" styleClass="field" />
            <DatePicker fx:id="datePicker" promptText="Travel date" />
            <Button fx:id="searchButton" text="Search" onAction="#onSearch" styleClass="primary-button" />
        </HBox>
        <TableView fx:id="resultTable" prefHeight="420">
            <columns>
                <TableColumn fx:id="colTrip" text="Trip" />
                <TableColumn fx:id="colRoute" text="Route" />
                <TableColumn fx:id="colDeparture" text="Departure" />
                <TableColumn fx:id="colArrival" text="Arrival" />
                <TableColumn fx:id="colPrice" text="Price" />
                <TableColumn fx:id="colSeats" text="Seats" />
            </columns>
        </TableView>
        <Button fx:id="selectTripButton" text="Select Trip" onAction="#onSelectTrip" styleClass="ghost-button" />
    </VBox>
    <padding>
        <Insets top="4" right="4" bottom="4" left="4" />
    </padding>
</VBox>
