<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.busticket.controller.passenger.SeatSelectionController" spacing="16">
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Select Seats" styleClass="page-title" />
        <Label fx:id="tripLabel" text="Trip details" styleClass="page-subtitle" />
    </HBox>
    <VBox styleClass="card" spacing="14">
        <GridPane fx:id="seatGrid" hgap="8" vgap="8" />
        <HBox spacing="12" alignment="CENTER_RIGHT">
            <Label text="Total" />
            <Label fx:id="totalPriceLabel" text="$0.00" styleClass="badge" />
            <Button fx:id="continueButton" text="Continue" onAction="#onContinue" styleClass="primary-button" />
        </HBox>
    </VBox>
    <padding>
        <Insets top="4" right="4" bottom="4" left="4" />
    </padding>
</VBox>
