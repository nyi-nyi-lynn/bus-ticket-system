<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.busticket.controller.passenger.MyBookingsController" spacing="16" stylesheets="@../theme.css">
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="My Bookings" styleClass="page-title" />
    </HBox>

    <VBox spacing="12">
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" prefHeight="600" styleClass="mybooking-scroll">
            <content>
                <VBox fx:id="bookingsFlow" spacing="10" fillWidth="true">
                    <padding>
                        <Insets top="8" right="8" bottom="8" left="8" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
    </VBox>
</VBox>

