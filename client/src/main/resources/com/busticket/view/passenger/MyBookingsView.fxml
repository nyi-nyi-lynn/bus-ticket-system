<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.busticket.controller.passenger.MyBookingsController" spacing="16">
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="My Bookings" styleClass="page-title" />
    </HBox>
    <VBox styleClass="card" spacing="12">
        <TableView fx:id="bookingTable" prefHeight="420">
            <columns>
                <TableColumn fx:id="colBookingId" text="Booking" />
                <TableColumn fx:id="colTrip" text="Trip" />
                <TableColumn fx:id="colSeats" text="Seats" />
                <TableColumn fx:id="colStatus" text="Status" />
                <TableColumn fx:id="colDate" text="Date" />
            </columns>
        </TableView>
        <Button fx:id="viewTicketButton" text="View Ticket" onAction="#onViewTicket" styleClass="ghost-button" />
    </VBox>
</VBox>
