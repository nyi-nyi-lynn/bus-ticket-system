<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.busticket.controller.passenger.PaymentController" spacing="16" stylesheets="@../theme.css">
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Payment" styleClass="page-title" />
    </HBox>
    <VBox styleClass="card" spacing="12">
        <Label text="Booking Summary" styleClass="page-subtitle" />
        <VBox fx:id="summaryBox" spacing="6" />
        <HBox spacing="10">
            <ComboBox fx:id="paymentMethodCombo" promptText="Payment Method" />
            <Button fx:id="confirmButton" text="Confirm Payment" onAction="#onConfirm" styleClass="primary-button" />
        </HBox>
    </VBox>
    <padding>
        <Insets top="4" right="4" bottom="4" left="4" />
    </padding>
</VBox>

