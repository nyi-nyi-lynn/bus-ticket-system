<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fitToWidth="true"
            hbarPolicy="NEVER"
            stylesheets="@../theme.css"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.busticket.controller.passenger.PaymentController">
    <content>
        <VBox spacing="14">
            <padding>
                <Insets bottom="6" left="6" right="6" top="6" />
            </padding>

            <Label styleClass="page-title" text="Payment" />

            <VBox spacing="10" styleClass="card">
                <Label styleClass="section-title" text="Booking Summary" />

                <GridPane hgap="12" vgap="8">
                    <columnConstraints>
                        <ColumnConstraints minWidth="130" prefWidth="130" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>

                    <Label styleClass="page-subtitle" text="Route" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <Label fx:id="routeValueLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                    <Label styleClass="page-subtitle" text="Travel Date" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <Label fx:id="travelDateValueLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                    <Label styleClass="page-subtitle" text="Departure Time" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <Label fx:id="departureTimeValueLabel" text="-" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                    <Label styleClass="page-subtitle" text="Selected Seats" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <Label fx:id="selectedSeatsValueLabel" text="-" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                </GridPane>

                <Separator />

                <HBox alignment="CENTER_LEFT" spacing="12">
                    <Label minWidth="130" styleClass="page-subtitle" text="Total Price" />
                    <Label fx:id="totalPriceValueLabel"
                           text="0.00"
                           style="-fx-font-size: 19px; -fx-font-weight: 700; -fx-text-fill: #1f8f48;" />
                </HBox>
            </VBox>

            <VBox spacing="8" styleClass="card">
                <Label styleClass="section-title" text="Payment Method" />

                <fx:define>
                    <ToggleGroup fx:id="paymentMethodToggle" />
                </fx:define>

                <RadioButton fx:id="kbzPayRadio"
                             text="KBZPay"
                             toggleGroup="$paymentMethodToggle"
                             onAction="#onPaymentMethodChanged" />

                <RadioButton fx:id="wavePayRadio"
                             text="WavePay"
                             toggleGroup="$paymentMethodToggle"
                             onAction="#onPaymentMethodChanged" />

                <RadioButton fx:id="cardRadio"
                             text="Credit/Debit Card"
                             toggleGroup="$paymentMethodToggle"
                             onAction="#onPaymentMethodChanged" />
            </VBox>

            <VBox fx:id="qrSection" spacing="8" managed="false" visible="false" styleClass="card">
                <Label styleClass="section-title" text="QR Payment" />

                <ImageView fx:id="qrImageView" fitWidth="220" fitHeight="220" preserveRatio="true" smooth="true" />

                <HBox spacing="8">
                    <Label minWidth="110" styleClass="page-subtitle" text="Account Name:" />
                    <Label fx:id="accountNameValueLabel" text="-" />
                </HBox>

                <HBox spacing="8">
                    <Label minWidth="110" styleClass="page-subtitle" text="Account Phone:" />
                    <Label fx:id="accountPhoneValueLabel" text="-" />
                </HBox>

                <Label fx:id="instructionLabel" text="Scan to pay" />
            </VBox>

            <VBox fx:id="cardFormSection" spacing="10" managed="false" visible="false" styleClass="card">
                <Label styleClass="section-title" text="Card Details" />

                <GridPane hgap="12" vgap="8">
                    <columnConstraints>
                        <ColumnConstraints minWidth="130" prefWidth="130" />
                        <ColumnConstraints hgrow="ALWAYS" />
                    </columnConstraints>

                    <Label styleClass="page-subtitle" text="Cardholder Name" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                    <TextField fx:id="cardHolderNameField"
                               promptText="Enter cardholder name"
                               styleClass="field"
                               GridPane.columnIndex="1"
                               GridPane.rowIndex="0" />

                    <Label styleClass="page-subtitle" text="Card Number" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    <TextField fx:id="cardNumberField"
                               promptText="1234 5678 9012 3456"
                               styleClass="field"
                               GridPane.columnIndex="1"
                               GridPane.rowIndex="1" />

                    <Label styleClass="page-subtitle" text="Expiry Date" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                    <TextField fx:id="expiryDateField"
                               promptText="MM/YY"
                               styleClass="field"
                               GridPane.columnIndex="1"
                               GridPane.rowIndex="2" />

                    <Label styleClass="page-subtitle" text="CVV" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                    <PasswordField fx:id="cvvField"
                                   promptText="CVV"
                                   styleClass="field"
                                   GridPane.columnIndex="1"
                                   GridPane.rowIndex="3" />
                </GridPane>

                <Label styleClass="page-subtitle" text="UI preview only." />
            </VBox>

            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Region HBox.hgrow="ALWAYS" />
                <Button text="Back" styleClass="ghost-button" onAction="#onBack" />
                <Button fx:id="confirmPaymentButton"
                        text="Confirm Payment"
                        styleClass="primary-button"
                        onAction="#onConfirmPayment" />
            </HBox>
        </VBox>
    </content>
</ScrollPane>
