<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.busticket.controller.guest.GuestInfoController" spacing="16">
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Guest Information" styleClass="page-title" />
    </HBox>
    <VBox styleClass="card" spacing="12">
        <TextField fx:id="fullNameField" promptText="Full name" styleClass="field" />
        <TextField fx:id="emailField" promptText="Email" styleClass="field" />
        <TextField fx:id="phoneField" promptText="Phone" styleClass="field" />
        <Button fx:id="continueButton" text="Continue" onAction="#onContinue" styleClass="primary-button" />
    </VBox>
    <padding>
        <Insets top="4" right="4" bottom="4" left="4" />
    </padding>
</VBox>
